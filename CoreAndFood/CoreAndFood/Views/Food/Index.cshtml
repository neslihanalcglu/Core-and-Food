@using X.PagedList;
@using X.PagedList.Mvc.Core

@model IPagedList<CoreAndFood.Data.Models.Food>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>Food List</h1>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Food ID</th>
            <th>Food Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category Name</th>
            <th>Delete</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
        @foreach (var x in Model)
        {
    <tr>
        <td>@x.FoodId</td>
        <td>@x.Name</td>
        <td>@x.Price</td>
        <td>@x.Stock</td>
        <td>@x.Category.CategoryName</td>
        <td><a href="/Food/DeleteFood/@x.FoodId" class="btn btn-danger">Delete</a></td>
        <td><a href="/Food/FoodGet/@x.FoodId" class="btn btn-warning">Update</a></td>
        <td><a href="#" class="btn btn-light">Details</a></td>
    </tr>

        }
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    <a href="/Food/FoodAdd/" class="btn btn-info">New Food</a>
